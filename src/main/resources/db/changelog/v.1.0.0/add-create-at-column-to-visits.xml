<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet author="qqMik" id="add-create-at-column-to-visits">
        <addColumn tableName="visits">
            <column name="create_at" type="TIMESTAMP WITH TIME ZONE" remarks="Create at date"/>
        </addColumn>

        <update tableName="visits">
            <column name="create_at" valueComputed="visit_datetime"/>
        </update>

        <addDefaultValue tableName="visits" columnName="create_at" defaultValueComputed="CURRENT_TIMESTAMP"/>

        <addNotNullConstraint tableName="visits" columnName="create_at" columnDataType="TIMESTAMP WITH TIME ZONE"/>
    </changeSet>
</databaseChangeLog>